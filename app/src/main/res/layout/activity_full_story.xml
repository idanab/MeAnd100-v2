<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.meand100_2.news.FullStoryActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HeaderHeaderHeaderHeaderHeaderHHeaderHeadereaderc"
            android:id="@+id/header_text"
            android:paddingBottom="10dp"
            android:background="?attr/color"
            android:textColor="#ff000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="22dp" >

            <TextView
                android:id="@+id/location_text"
                android:layout_width="103dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="distance"
                android:textSize="12sp"
                android:textColor="#ff101209" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="103dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/location_text"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="date"
                android:textSize="12sp"
                android:textColor="#ff101209" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="103dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/date_text"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="time"
                android:textSize="12sp"
                android:textColor="#ff101209" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text= ""
            android:id="@+id/summary_text"
            android:paddingBottom="20dp"
            android:textDirection="rtl"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="אנו מבקשים את עזרתכם בחיפושים אחר הנעדר בסיכון עדי ליברמן, בן 53
מגבעת יערים. הוא נראה לאחרונה בשבוע שעבר במקום מגוריו, כשלבש
כל היודע דבר על מקום הימצאו מתבקש לפנות לתחנת מטה יהודה
טרנינג אפור עם פסים ירוקים בצדדים. 
בטלפון: 02-9902210 או למוקד 100. תודה"
            android:id="@+id/full_article_text"
            android:textDirection="rtl"
            android:textColor="#ff000000" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"></TableLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/story_photo"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:src="@drawable/missing" />
    </LinearLayout>
</RelativeLayout>
