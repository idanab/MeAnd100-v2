<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_gravity="right"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.meand100_2.reports.GeneralReport"
    android:nestedScrollingEnabled="true"
    android:background="?attr/color">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView3" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/report_linear_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/report_sent_alert_txt"
                    android:id="@+id/report_sent_text"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel_button"
                    android:layout_gravity="center"
                    android:id="@+id/cancel_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="first_question"
                    android:id="@+id/first_question_header" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:id="@+id/first_radio_group">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:id="@+id/radioButton" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:id="@+id/radioButton2" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:id="@+id/radioButton3" />

                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="second_question"
                    android:id="@+id/second_question_header" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:id="@+id/second_radio_group">

                    <RadioButton
                        android:id="@+id/radio_1"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="1Op"
                        android:checked="false" />

                    <RadioButton
                        android:id="@+id/radio_2"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="2Op" />

                    <RadioButton
                        android:id="@+id/radio_3"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="2Op" />

                    <RadioButton
                        android:id="@+id/radio_4"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="2Op" />

                    <RadioButton
                        android:id="@+id/radio_5"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="2Op" />

                </RadioGroup>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/PoliceButtons"
                    android:background="@drawable/buttonshape"
                    android:layout_gravity="center"
                    android:text="@string/send_button"
                    android:id="@+id/send_button"
                    android:elevation="10dp" />


            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/call_100_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/call"
            app:layout_anchor="@id/main_content"
            app:layout_anchorGravity="bottom|left|end"
            app:borderWidth="0dp"
            app:elevation="5dp"
            app:backgroundTint="#e90505" />

    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>
