<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_gravity="right"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.meand100_2.reports.GeneralReport"
    android:nestedScrollingEnabled="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/call_100_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:src="@drawable/call"
            app:layout_anchor="@id/main_content"
            app:layout_anchorGravity="bottom|right|end"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:backgroundTint="#e90505" />

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/report_linear_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/report_sent_alert_txt"
            android:id="@+id/report_sent_text"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp" />

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@android:drawable/divider_horizontal_bright"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:id="@+id/imageView4"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="first_question"
            android:id="@+id/first_question_header" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:id="@+id/first_radio_group"
            android:layout_marginBottom="15dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:id="@+id/radioButton" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:layout_gravity="right"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:id="@+id/radioButton2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:layout_gravity="right"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:id="@+id/radioButton3" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="second_question"
            android:id="@+id/second_question_header" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:id="@+id/second_radio_group"
            android:layout_marginBottom="15dp">

            <RadioButton
                android:id="@+id/radio_1"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="1Op"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radio_2"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="2Op" />

            <RadioButton
                android:id="@+id/radio_3"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="2Op" />

            <RadioButton
                android:id="@+id/radio_4"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="2Op" />

            <RadioButton
                android:id="@+id/radio_5"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="2Op" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical" >

            <Button
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimaryDark"
                android:layout_gravity="bottom"
                android:text="@string/continue_txt"
                android:id="@+id/send_button"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:elevation="10dp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
