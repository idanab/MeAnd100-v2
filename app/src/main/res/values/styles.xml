<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#1A237E</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#283593</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#ffffff</item>
        <item name="color">#0000FF</item>
    </style>

    <style name="PoliceButtons">
        <item name="android:textColor">#CED5DE</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">157dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:shadowColor">#1EA868</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>